<!DOCTYPE html>
<html>
  <head>
  <title>Followers of <%= @user.username %> | Tweeter</title>
  </head>
  <body>
    <nav>
      <a href="/show?id=<%= @user.id %>">Home</a>
      <a href="/followers?id=<%= @user.id %>">Followers</a>
      <a href="/following?id=<%= @user.id %>">Following</a>
      <a href="/upload">Test upload</a>
      <a href="/logout">Logout</a>
    </nav>
    <h1>Followers:</h1>
    <ul>
      <% @followers.each do |follower| %>
      <li><a href="/show?id=<%= follower.id %>">@<%= follower.username %></a></li>
      <% end %>
    </ul>
  </body>
</html>